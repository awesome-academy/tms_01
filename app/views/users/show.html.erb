<% provide(:title, @user.name) %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= t ".my_profile" %></h4>
    </div>
    <div class="body">
      <div class="panel panel-success">
        <div class="panel-heading">
          <div class="row">
            <div class="col-12 text-center">
              <p><b><%= @user.name %></b></p>
              <p><%= t ".day_join", time: format_date(@user.created_at) %></p>
            </div>
          </div>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <td><%= t "form.email" %></td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td><%= t "form.address" %></td>
              <td><%= @user.address %></td>
            </tr>
            <tr>
              <td><%= t "form.phone_number" %></td>
              <td><%= @user.phone_number %></td>
            </tr>
            <tr>
              <td><%= t "form.role" %></td>
              <td><%= @user.role %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
