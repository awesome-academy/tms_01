<% provide:title, t(".create_subject") %>
<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1 class="h3 mb-3 font-weight-normal mt-3 text-center"><%= t ".create_subject" %></h1>
      <%= form_for @subject, class: "form-signin text-center" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :title, t(".title_subject") %>
          <%= f.text_field :title, class:" form-control mt-2", placeholder: t("form.title_subject") %>
        </div>
        <div class="form-group">
          <%= f.label :description, t(".description_subject") %>
          <%= f.text_area :description, class:"form-control mt-2", placeholder: t("form.description_subject") %>
        </div>
        <div>
        <%= f.submit t(".btn_submit"), class:"btn btn-primary btn-block mt-3" %>
        </div>
        <div class="mb-5"></div>
      <% end %>
    </div>
  </div>
</div>
