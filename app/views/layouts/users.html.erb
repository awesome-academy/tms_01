<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>
  <body class="top-height">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <%= link_to t(".link_home"), "#", class: "navbar-brand" %>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to t(".link_profile"), current_user, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t(".link_settings"), edit_user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t(".link_log_out"), logout_path, method: :delete, class: "nav-link" %>
                </li>
            </ul>
        </div>
    </nav>
    
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <%= link_to t(".over_view"), "#" %>
                </li>
                <li>
                    <%= link_to t(".link_courses"), courses_path %>
                </li>
                <li>
                    <%= link_to t(".link_subjects"), subjects_path %>
                </li>
                <li>
                    <%= link_to t(".link_users"), users_path %>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <% flash.each do |message_type, message| %>
                    <div class="alert alert-<%= message_type %>"><%= message %></div>
                <% end %>
                <%= link_to t(".show_menu"), "#menu-toggle", class: "btn btn-secondary", id: "menu-toggle" %>
                <%= yield %>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <%= render "layouts/footer" %>
    <!-- Menu Toggle Script -->
    <script src="/assets/sidebar.js" type="text/javascript">
    </script>
  </body>
</html>
