<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header bg-secondary">
      <h4 class="modal-title"><%= t ".member" %></h4>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>

    <div class="modal-body bg-light">
      <%= render partial: "common/user_not_in_course", collection: remain_users, as: :user %>
    </div>

    <div class="modal-footer bg-dark">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "btn.btn_close" %></button>
      <button type="button" class="btn btn-primary add-member"><%= t "btn.btn_add_member" %></button>
    </div>

  </div>
</div>
