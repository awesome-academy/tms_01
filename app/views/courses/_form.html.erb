<%= form_for @course, class: "form-signin text-center" do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :title, t(".title_course") %>
    <%= f.text_field :title, class:" form-control mt-2" %>
  </div>
  <div class="form-group">
    <%= f.label :description, t(".description_course") %>
    <%= f.text_area :description, class:"form-control mt-2" %>
  </div>
  <div>
    <%= f.submit t(".submit"), class:"btn btn-primary btn-block mt-3" %>
  </div>
  <div class="mb-5"></div>
<% end %>
