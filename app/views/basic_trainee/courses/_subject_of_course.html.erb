<div class="card border rounded bg-light subject-<%= subject.id %>">
  <div>
    <%= image_tag("git.png", class: "img-thumbnail rounded float-left img-height", alt: t(".img_avatar")) %>
    <div class="card-body p-0">
      <h1 class="card-title">
        <%= subject.title %>
      </h1>
      <p class="card-text">
        <%= truncate(subject.description, length: Settings.limit_description) %>
      </p>
      <div class="btn-group">
        <%= link_to t(".show_details"), "#", class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
